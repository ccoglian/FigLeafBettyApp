<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.flb.app"
	version 	= "1.1.7">

	<name>Fig Leaf Betty</name>

	<description>Fig Leaf Betty's Recipe Helper is your personal guide to making vegan food at home. Search recipes, use the automatic reminders to help you sprout your own ingredients, and share the process of making food with friends.</description>

	<author href="https://github.com/ccoglian"
		email="mac@figleafbetty.com">
		Charlie Coglianese
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
